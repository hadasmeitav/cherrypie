{
	"name": "My Extension",
	"version": "1.0",
	"manifest_version": 2,
	"background": {
		"scripts": ["hot-reload.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["https://github.com/*"],
		"js": ["content.bundle.js"]
	}],
	"icons": {
		"128": "cherry-128.png"
	},
	"permissions": [
		"storage"
	  ],
	"content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
